# DevTools Sync - Local Development Environment
# Copy this file to .env and customize as needed:
#   cp .env.example .env

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL connection string
# For local Docker: postgres://devtools:<your-password>@localhost:5432/devtools_sync
# For SQLite (simpler): sqlite://./data/devtools_sync.db
DATABASE_URL=postgres://devtools:CHANGEME@localhost:5432/devtools_sync

# PostgreSQL credentials (used by docker-compose and local Docker commands)
POSTGRES_USER=devtools
POSTGRES_PASSWORD=CHANGEME
POSTGRES_DB=devtools_sync

# =============================================================================
# Server Configuration
# =============================================================================

# Port for the management service API
SERVER_PORT=8080

# JWT secret for signing authentication tokens
# Generate a secure value: openssl rand -base64 32
JWT_SECRET=CHANGEME-generate-a-secure-secret

# Token expiration time
JWT_EXPIRATION=24h

# =============================================================================
# Logging
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=debug

# Log format: json, text
LOG_FORMAT=text

# =============================================================================
# Dashboard Configuration
# =============================================================================

# API URL for the dashboard to connect to (used during development)
VITE_API_URL=http://localhost:8080/api/v1

# =============================================================================
# Agent Configuration (for local testing)
# =============================================================================

# Server URL the agent connects to
AGENT_SERVER_URL=http://localhost:8080

# API key for agent authentication (generate via dashboard or API)
AGENT_API_KEY=
